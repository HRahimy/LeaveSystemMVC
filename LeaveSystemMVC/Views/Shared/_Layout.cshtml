<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content=" IE= edge" /> <!-- chooses the most latest rendering engine-->
    <meta name= " viewport" content= " width= device-width, intitial-scale= 1" /> <!--sets the page size according to the device and initial zoom to 1-->
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content")
    @Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")
</head>


    
<body class="body-content">
    
    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                   
                    <a class="navbar-brand" href="/LApplication/Index"><img src="~/Content/GIMEL_logo.jpg" width="auto" height="40px" /></a>
                    <!--
                    <a class="navbar-brand" href="/LApplication/Index">Staff Member Name</a> -->
                </div>
                <div class="collapse navbar-collapse main-navbar-collapse">
                    <ul class="nav navbar-nav"></ul>
                    <div class="collapse navbar-collapse bootstrap-admin-navbar-sm">
                        <ul class="nav navbar-nav navbar-right ">
                            <li class="dropdown">
                                <a href="@Url.Action("Logout", "Auth")" class="dropdown-toggle" data-hover="dropdown">Account<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li role="presentation" class="dropdown-header">Dropdown header</li>
                                    <li><a href="/sChangePassword/Index">Change Password</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li role="presentation" class="dropdown-header">Dropdown header</li>
                                    <li><a href="/Auth/Login">Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div><!-- /.navbar-collapse -->
            </div>
        </div><!-- /.container -->
    </nav>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <div class="col-md-6">
                <hr>
                <footer>
                    <p>&copy; @DateTime.Now.Year - Leave Management System</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>



