
<!--Creating a new leave type view-->

@model LeaveSystemMVC.Models.hrCreateLeave
@Html.Partial("_LeftMenu")
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h4>Create Leave Type</h4>

            <table style="margin:30px;width:100%;">
                <tr>
                    <td>
                        <div class="form-group">

                            <!--Displays a list of existing leave types in the database-->

                            @Html.LabelFor(model => model.existingLeaveType, "Existing Leave Types", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.existingLeaveType, new SelectList(ViewBag.LeaveTypeName))
                                @Html.ValidationMessageFor(model => model.existingLeaveType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>
                </tr>
            </table>

            <table style="margin: 30px;">
                <tr>
                    <td>
                        <div class="form-group">

                            <!--Prompts user to enter the name of a new leave type name to store in the database -->

                            @Html.LabelFor(model => model.newLeaveType, "New Leave Type Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            @Html.EditorFor(model => model.newLeaveType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.newLeaveType, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
            </table>

            <div class="form-group">

                <!--Prompts user to enter duration for newly entered leave type -->

                @Html.LabelFor(model => model.holidayDuration, "Duration", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.holidayDuration, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.holidayDuration, "", new { @class = "text-danger" })
                </div>
            </div>
            
                

                <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
                </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
