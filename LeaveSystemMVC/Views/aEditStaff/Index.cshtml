@model IEnumerable<LeaveSystemMVC.Models.minDepartment>
@Html.Partial("_LeftMenu")
<div class="col-md-10">
    <h2>Edit Staff Member</h2>
    <hr />
    @{
        var DepartmentList = ViewData["DepartmentList"] as LeaveSystemMVC.Models.minDepartment;
    }
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">Employee Selection</div>
                    </div>
                    <div class="bootstrap-admin-panel-content">
                        <div class="row">
                            <div class="col-md-5">
                                <h4>Department Selection</h4>
                                <div class="well">
                                    @Html.Partial("_MinDepartmentList", @DepartmentList)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function ()
        {
            var $this = $("#isAdmin");

            if ($this.is(':checked'))
            {
                $('#staffType').attr("disabled", "disabled")
                $('#optionalStaffType').attr("disabled", "disabled")
            }
        });
        $('#isAdmin').click(function ()
        {
            var $this = $(this);

            if ($this.is(':unchecked'))
            {
                $('#staffType').removeAttr("disabled");
                $('#optionalStaffType').removeAttr("disabled");
            }
            else
            {
                $('#staffType').attr("disabled", "disabled")
                $('#optionalStaffType').attr("disabled", "disabled")
            }
        });
    </script>
}
