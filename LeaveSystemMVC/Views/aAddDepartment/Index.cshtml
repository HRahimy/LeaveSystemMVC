@model LeaveSystemMVC.Models.aDepartment
@Html.Partial("_LeftMenu")
<div class="col-md-10">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h4>Adding a Department</h4>
            <table style="margin:30px;width:100%;">
                <tr>
                    <td>
                        <label for="existLeave"> Existing Departments</label>
                        <select id="#existLeave">
                            <option>IT </option>
                            <option>Academic Services</option>
                            <option>Student Services</option>
                            <option>HR</option>
                            <option>Finance</option>
                        </select>
                    </td>
                </tr>
            </table>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table style="margin: 30px;">
                <tr>
                    <td><div class="form-group">
                        @Html.LabelFor(model => model.departmentName, "New Department Name", htmlAttributes: new { @class = "control-label col-md-2" })
                       </div></td>
                    <td><div class="form-group">
                            @Html.EditorFor(model => model.departmentName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.departmentName, "", new { @class = "text-danger" })
                        </div>
                    
                    </tr></table>
            <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.primaryLMID, "Line Manager", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.primaryLMID, new SelectList(ViewBag.plm))
                            @Html.ValidationMessageFor(model => model.primaryLMID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
