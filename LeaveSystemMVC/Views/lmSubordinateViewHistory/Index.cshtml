@model LeaveSystemMVC.Models.sLeaveModel
@Html.Partial("_LeftMenu")
<div class="col-md-6">
    @using (Html.BeginForm()) 
    {
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Line Manager Subordinate History</h4>

            <hr />
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table style="width:100%;">
                <tr>
                    <td>
                        <div class="form-horizontal">
                            <label>Staff Name  </label>
                            <select>
                                <option>Jasim</option>
                                <option>Zobad</option>
                            </select>

                        </div>
                    </td>
                </tr>
            </table>
            <hr />
            <table style="margin:15px;width:100%">
                <tr>
                    <td><div class="form-group">
                        <label for="dt">Start Date</label>
                        <input id="dt" name="dt" type="date" />
                    </div></td>
                    <td><div class="form-group">
                        <label for="dt">End Date</label>
                        <input id="edt" name="edt" type="date" />
                    </div></td>
                </tr>
            </table>
        </div>

  <br /> <hr />
        
      
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="View History" class="btn btn-default" />
            </div>
        </div>
        
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
