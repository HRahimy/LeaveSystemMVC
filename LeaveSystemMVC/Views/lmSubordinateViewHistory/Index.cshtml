@model IEnumerable<LeaveSystemMVC.Models.minStaff>
  
@{ 
    ViewBag.Title = "Index";
}
@Html.Partial("_LeftMenu")
@Html.ValidationSummary(true)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <div class="form-horizontal">
            <h4>Subordinates</h4>
            <hr />
            @Html.Partial("_MinEmpList", @Model)
        </div>
    </div>
    <div class="col-md-4">
        <h4>Result</h4>
        <hr />
        
        <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript">
        $(function ()
        {
            var detailsPartial = $('#details');

            $('.details-link').click(function (event) {
                event.preventDefault();
                var url = $(this).attr('href');

                $.ajax({
                    url: url,
                    type: 'get',
                    success: function(data) {
                        detailsPartial.html(data);
                        $('#clearDetails').click(function () {
                            detailsPartial.html(null);
                        });
                    }
                });
            });
        });
        </script>
        <div id="details"></div>
    </div>
