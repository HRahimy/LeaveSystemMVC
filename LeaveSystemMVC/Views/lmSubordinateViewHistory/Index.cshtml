@model LeaveSystemMVC.Models.sLeaveModel
@Html.Partial("_LeftMenu")
<div class="col-md-6">
    @using (Html.BeginForm()) 
    {
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Line Manager Subordinate History Page</h4>

        <hr />
        <div class="row">
            <div class="form-group col-xs-4">
                <label>Start Date </label>
                <input type="date" />

            </div>
            <div class="form-group col-xs-4">
                <label>End Date </label>
                <input type="date" />
            </div>

        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal">
                <label>Staff Name  </label>
                <select>
                    <option>Jasim</option>
                    <option>Zobad</option>
                </select>
                
            </div>
        <hr />
            <div class="col-md-6">
                <label for="dt">Start Date</label>
                <input id="dt" name="dt" type="date" />
            </div>
            <div class="col-md-6">
                <label for="dt">End Date</label>
                <input id="edt" name="edt" type="date" />
            </div>
        </div>
  <br /> <hr />
        
      
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="View History" class="btn btn-default" />
            </div>
        </div>
        
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
