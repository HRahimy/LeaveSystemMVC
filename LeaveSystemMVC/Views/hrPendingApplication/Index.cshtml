@model IEnumerable<LeaveSystemMVC.Models.sLeaveModel>
@Html.Partial("_LeftMenu")
<div class="col-md-10">
    <h2>Pending Applications</h2>
    <hr />
    <div class="col-md-5">
        <div class="panel-group" id="accordion">
            @foreach (var leave in Model)
            {
                string buttonText = leave.staffName + " <" + leave.leaveType + ">";
                @Html.ActionLink(buttonText, "Select", new { id = leave.leaveID }, new { @class = "btn btn-primary btn-block", @style = "color:white" })

            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}